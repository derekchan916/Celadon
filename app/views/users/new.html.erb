<h1>Create Account</h1>

<form action="/users" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label>Your first name</br>
    <input name="user[fname]" type="text"><br>
  </label>
  <label>Your last name</br>
    <input name="user[lname]" type="text"><br>
  </label>

  <label>Email<br>
    <input name="user[email]" type="text"><br>
  </label>

  <label>Password<br>
    <input
      name="user[password]"
      type="password"
      placeholder="at least 6 characters"><br>
  </label>

  <input
    type="submit"
    value="Create your Celadon account"
    class="btn btn-primary">
  <p>Already have an account?
    <a href="/session/new">Sign in</a>
  </p>
</form>
