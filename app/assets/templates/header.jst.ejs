<div class="navbar-ad">
</div>
<nav class="navbar group" role="navigation">

  <div class="navbar-logo">
    <a class="navbar-logo-img" href="/">Celadon</a>
  </div>

  <div class="search-bar">
    <div class="search-bar-input">
      <input
        class="search-bar-input-bar"
        id="search-bar"
        type="text"
        name="user-input">
      <div class="search-bar-button">
        <img
          class="search-bar-img"
          src="assets/css/Magnifying_glass_icon.png">
      </div>
    </div>
  </div>
  <div class="navbar-btn">

    <% if (currentUser.isSignedIn()) { %>
      <span class="span-button button1" id='user-page-btn'>
    <% } else { %>
      <span class="span-button button1" id='session-new-btn'>
    <% } %>
      <span class="line1">Hello.
        <% if (currentUser.isSignedIn) { %>
          <%= currentUser.escape('fname') %>
        <% } else { %>
           Sign in
        <% } %>
      </span>
      <span class="line2">Your Account
        <span class="arrow">

          <div class="dropdown hidden" id="dropdown">
            <span class="dropdown-arrow"></span>
              <ul>
                <% if (!currentUser.isSignedIn()) { %>
                  <li class="dropdown-btn">
                    <a class="dropdown-btn-link" href="#/session/new">Sign in</a>
                  </li>
                  <li>New customer? Start here.</li>
                <% } %>
                <li><a href="#/user/<%= currentUser.id %>">Your Account</a></li>
                <li><a href="#">Your Orders</a></li>
                <li><a href='#'>Your Wish List</a></li>
                <li><a href='#'>Your Recommendations</a></li>
                <% if (currentUser.isSignedIn()) { %>
                  <li>Not <%= currentUser.escape('fname') %>?
                    <a id="sign-out-link">Sign out</a>
                  </li>
                <% } %>
              </ul>
          </div>
        </span>
      </span>
    </span>

    <span class="span-button">
      <span class="line1">Wish</span>
      <span class="line2">List
        <span class="arrow"></span>
      </span>
    </span>
    <% if (currentUser.isSignedIn()) { %>
      <span class="span-button" id='to-cart-btn'>
    <% } else { %>
      <span class="span-button" id='to-cart-btn'>
    <% } %>
      <span class="line1"></span>
      <span class="line2">Cart</span>
      <span class="cart-img"></span>
    </span>
  </div>
</nav>
