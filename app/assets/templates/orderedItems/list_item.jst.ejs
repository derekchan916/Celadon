<div class='ordered-product-header group'>
  <div class='ordered-product-header-left'>
    ORDER # <%= product.escape('order_id') %>
  </div>
</div>

<div class='ordered-product-content group'>
  <div class='ordered-product-content-left'>
    <div class='ordered-date'>
      ORDER PLACED <%= product.escape('created_at') %>
    </div>
    <div class='ordered-product-img'>
      <img src="<%= product.escape('image_url') %>">
    </div>
    <h4><a href="#/product/<%= product.escape('product_id') %>"><%= product.escape('name') %></a></h4>
    <div class='ordered-product-header-left'>
      <span class='money'>$<%= product.escape('price') %></span><br>
      Quantity: <%= product.escape('quantity') %>
    </div>
  </div>
  <div class='ordered-product-content-right'>
    <a class='sign-in-btn' href='#/product/<%= product.id %>'>Buy it Again</a>
  </div>
</div>
