<div class="advertisement5">
  <h4>Expand your horizons</h4>
  <form class="filter-list-categories">
    <span class="form-header">Categories</span>
    <% Celadon.types.each(function(type){ %>
      <input class="checkbox-input"
             type="checkbox"
             name="category"
             value="<%= type.escape('name') %>"
             <% if (categories) { %>
               <% categories.forEach(function(category) { %>
                 <% if (category === type.escape('name') ) { %>
                   <%= "checked" %>
                 <% } %>
               <% }) %>
             <% } %>
             >  <%= type.escape('name') %><br>
     <% }) %>
  </form>
  <form class="filter-list-price">
    <span class="form-header">Price</span>
    <input class="checkbox-price" type="radio" name="price" value="0"
      <% if (price[0] === "0") { %>
        <%= "checked" %>
      <% } %>
      > < $0.00<br>
    <input class="checkbox-price" type="radio" name="price" value="10"
      <% if (price[0] === "10") { %>
        <%= "checked" %>
      <% } %>
      > < $10.00<br>
    <input class="checkbox-price" type="radio" name="price" value="150"
      <% if (price[0] === "150") { %>
        <%= "checked" %>
      <% } %>
      > < $150.00<br>
    <input class="checkbox-price" type="radio" name="price" value="250"
      <% if (price[0] === "250") { %>
        <%= "checked" %>
      <% } %>
      > < $250.00<br>
    <input class="checkbox-price" type="radio" name="price"
      <% if (price[0] === "on") { %>
        <%= "checked" %>
      <% } %>
      > All prices<br>
  </form>
</div>

<div class="results-page">
  <nav>
    <% if (results.total_count > 0) { %>
      Displaying page <%= results.pageNum %> out of <%= Math.ceil(results.total_count / 15) %> page(s)
    <% } else { %>
			No results, please search again
		<% } %>
  </nav>
  <section class="results">
    <ul class="search-results-full all-poke-list"></ul>
    <span>
      <nav class="group">
				<% if (results.pageNum > 1) { %>
					<a class="prev-page" href="javascript:void(0)">
						<span class="prev-arrow"></span>
						Previous Page
					</a>
				<% } %>
				<% if (results.pageNum < Math.ceil(results.total_count / 15)) { %>
					<a class="next-page" href="javascript:void(0)">
						<span class="next-arrow"></span>
						Next Page
					</a>
				<% } %>
			</nav>
    </span>
  </section>
</div>
